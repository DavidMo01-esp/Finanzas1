<Window x:Class="Finanzas1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Finanzas1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="AntiqueWhite" CornerRadius="10" Padding="15" Margin="0,0,0,20" BorderBrush="#DEE2E6" BorderThickness="1">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="Saldo Actual" Foreground="Gray" FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Balance, StringFormat={}{0:C}}" FontSize="28" FontWeight="Bold" Foreground="#212529"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <StackPanel Margin="10,0">
                        <TextBlock Text="Concepto" FontSize="11" Margin="0,0,0,3" Foreground="#495057" />
                        <TextBox Width="150" Height="25" VerticalAlignment="Center" 
                                 Text="{Binding NewCategory, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Margin="10,0">
                        <TextBlock Text="Cantidad" FontSize="11" Margin="0,0,0,3" Foreground="#495057"/>
                        <TextBox Width="80" Height="25" VerticalContentAlignment="Center"
                                 Text="{Binding NewQuantity, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,0" VerticalAlignment="Bottom">
                        <Button Content="Ingreso" Click="BtnIngresoClick" Background="Green" Foreground="White" Width="75" Height="25" Margin="0,0,5,0" Cursor="Hand"/>
                        <Button Content="Gasto" Click="BtnGastoClick" Background="Red" Foreground="White" Width="75" Height="25" Cursor="Hand"/>

                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>
        <DataGrid
                  ItemsSource="{Binding Movements}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="White"
                  Background="Transparent"
                  BorderThickness="0" Margin="0,105,0,0" Grid.RowSpan="2">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Fecha" Binding="{Binding Date, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Width="130"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding Category}" Width="*"/>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Type}" Width="80"/>

                <DataGridTextColumn Header="Importe" Binding="{Binding Quantity, StringFormat={}{0:C}}" Width="120">

                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Income" >
                                    <Setter Property="Foreground" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Type}" Value="Expense" >
                                    <Setter Property="Foreground" Value="Red"/>


                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                    </DataGridTextColumn.ElementStyle>

                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
